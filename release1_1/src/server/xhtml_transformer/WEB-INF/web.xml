<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE web-app
    PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
    "http://java.sun.com/j2ee/dtds/web-app_2_3.dtd">

<web-app>
  <display-name>XHTML Transformer</display-name>
  <description>An XHTML to OPML Transformer for Displaying Inside the HyperScope</description>
  
	<servlet>
		<description>
			An XHTML to OPML Transformer for Displaying Inside the HyperScope
		</description>
		<display-name>
			XHTMLTransformer
		</display-name>
		<servlet-name>
			XHTMLTransformer
		</servlet-name>
		<servlet-class>
			org.hyperscope.transformers.xhtml.XHTMLServlet
		</servlet-class>
		<load-on-startup>1</load-on-startup>
	</servlet>
	
	<servlet-mapping>
		<servlet-name>XHTMLTransformer</servlet-name>
		<url-pattern>/</url-pattern>
	</servlet-mapping>
</web-app>
