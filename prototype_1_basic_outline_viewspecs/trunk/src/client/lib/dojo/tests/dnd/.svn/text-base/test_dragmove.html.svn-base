<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01//EN"
        "http://www.w3.org/TR/html4/strict.dtd"> 

<title>Dojo Button Widget Test</title>

<script type="text/javascript">
	var djConfig = { isDebug: true };
</script>

<script type="text/javascript" src="../../dojo.js"></script>
<script type="text/javascript">
	dojo.require("dojo.dnd.HtmlDragMove");
	dojo.require("dojo.event.*");

	function byId(id){
		return document.getElementById(id);
	}

	function init(){
		new dojo.dnd.HtmlDragMoveSource(byId("layer1"));
		new dojo.dnd.HtmlDragSource(byId("layer2"));
		new dojo.dnd.HtmlDragMoveSource(byId("layer3"));
	}

	dojo.event.connect(dojo, "loaded", "init");
</script>

<div id="layer1" style="border: 1px solid black;">
	<ul>
		<li>list 1 item 1</li>
		<li>list 1 item 2</li>
		<li>list 1 item 3</li>
	</ul>
</div>

<ul id="layer2">
	<li>list 2 item 1</li>
	<li>list 2 item 2</li>
	<li>list 2 item 3</li>
</ul>

<ul id="layer3">
	<li>list 3 item 1</li>
	<li>list 3 item 2</li>
	<li>list 3 item 3</li>
</ul>

